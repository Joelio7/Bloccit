<h1>New Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions:</p>
    <ul>
      <li>Make sure the question is appropriate.</li>
      <li>Never insult dogs.</li>
      <li>Smile when you type.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%=f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter question " %>
      </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :title, rows: 8, class: 'form-control', placeholder: "Enter question description" %>
        </div>
        <div class="form-group">
          <%= f.label :"Resolved?" %>
          <%= f.check_box :resolved %>
        </div>
        <%= f.submit "Save", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
